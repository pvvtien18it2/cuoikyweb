{{-- Số lượng phòng đặt gần hẹn --}}
@php
    use Carbon\Carbon;
    $notifications = App\datphong::all();
    $count =0;
@endphp
@foreach ($notifications as $n)
    @php

        $timeOld = $n->dayBookRoom;
        $timeOld = Carbon::parse($timeOld);
        $days =  $timeOld->diffInDays(Carbon::now());
        if ($days <= 0){
            $count++;
        }
    @endphp
@endforeach


